<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorBackLight"
    tools:context=".Activities.MainActivity">

    <Button
        android:id="@+id/group_but"
        android:layout_width="300dp"
        android:layout_marginVertical="7dp"
        android:layout_height="wrap_content"
        android:text="@string/show_group_but"
        android:gravity="center"
        android:background="@color/colorButtonLight"
        android:textColor="#FFF"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/teachers_but"
        android:layout_width="300dp"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content"
        android:text="@string/teachers_but"
        android:gravity="center"
        android:background="@color/colorButtonLight"
        android:textColor="#fff"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/students_but"
        android:layout_width="300dp"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content"
        android:text="@string/all_students_but"
        android:gravity="center"
        android:background="@color/colorButtonLight"
        android:textColor="#fff"
        android:textSize="18sp"
        />


</LinearLayout>