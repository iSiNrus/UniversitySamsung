<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddEditGroupActivity"
    android:background="@color/colorBackDark"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/colorBackDark"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/rel_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity = "center"
                >

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_marginStart="@dimen/spacing_normal_16"
                    android:layout_marginLeft="@dimen/spacing_normal_16"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Edit/Create Group"
                    android:textColor="@color/holo_blue_bright"
                    android:textSize="24sp"
                    />
                <ImageView
                    android:id="@+id/iv_save_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_active_save_32"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/spacing_normal_16"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackDark"
        >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wr_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                app:counterMaxLength="128"
                android:textColorHint="@color/holo_blue_bright"
                android:layout_marginVertical="6dp"
                >

                <EditText
                    android:id="@+id/et_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Название группы"
                    android:imeOptions="actionNext"
                    tools:text="4-АИТ-9"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wr_group_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                app:counterMaxLength="128"
                android:textColorHint="@color/holo_blue_bright"
                android:layout_marginVertical="6dp"
                >

                <EditText
                    android:id="@+id/et_group_spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Специальность"
                    android:imeOptions="actionNext"
                    tools:text="Программная инженерия"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wr_group_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                app:counterMaxLength="128"
                android:textColorHint="@color/holo_blue_bright"
                android:layout_marginVertical="6dp"
                >

                <EditText
                    android:id="@+id/et_group_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Факультет"
                    android:imeOptions="actionNext"
                    tools:text="ИАИТ"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/holo_blue_bright"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="Куратор"
                />

                <Spinner
                android:id="@+id/sp_kurator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_normal_16"
                android:spinnerMode="dropdown"
                />
            </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>