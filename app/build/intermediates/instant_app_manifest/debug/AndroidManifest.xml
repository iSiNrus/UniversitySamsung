<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.mitryashkin.universitysamsung"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="30" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity android:name="ru.mitryashkin.universitysamsung.Activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ru.mitryashkin.universitysamsung.Activities.StudentsActivity" />
        <activity android:name="ru.mitryashkin.universitysamsung.Activities.TeachersActivity" />
        <activity android:name="ru.mitryashkin.universitysamsung.Activities.GroupsActivity" />
        <activity
            android:name="ru.mitryashkin.universitysamsung.Activities.AddEditTeacherActivity"
            android:parentActivityName="ru.mitryashkin.universitysamsung.Activities.TeachersActivity" />
        <activity
            android:name="ru.mitryashkin.universitysamsung.Activities.AddEditGroupActivity"
            android:parentActivityName="ru.mitryashkin.universitysamsung.Activities.GroupsActivity" />
        <activity
            android:name="ru.mitryashkin.universitysamsung.Activities.AddEditStudentActivity"
            android:parentActivityName="ru.mitryashkin.universitysamsung.Activities.StudentsActivity" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="ru.mitryashkin.universitysamsung.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>